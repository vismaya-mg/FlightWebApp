@model IEnumerable<Flight>
@{
    ViewData["Title"] = "Index";
}
<h1>Flight List</h1>

<div class="d-flex">
    <a asp-action="Register" class="btn btn-success ms-auto my-2">+ Add Flight</a>
</div>

<div class="container-fluid">
    @if (Model.Any())
    {
        <div class="row gap-5">
            @foreach (var item in Model)
            {
                <div class="card col-sm-3 shadow">
                    <img src="https://dummyimage.com/500x500/f2f2f2/5e5e5e&text=@item.FlightId" class="card-img-top" alt="">
                    <div class="card-body">
                        <h2>@item.Flight_name</h2>
                        <p>@item.Flight_descriptiom</p>
                        <p>@item.Flight_Type</p>
                    </div>
                    <div class="card-footer d-flex">
                        <div class="btn-group ms-auto">
                            <a asp-action="Edit" asp-route-id="@item.FlightId" class="btn btn-primary">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.FlightId" class="btn btn-danger" onclick="return confirm('Do you want to delete this flight?')">Delete</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            No movies were found. Please
            <a asp-action="Create" class="alert-link">Add a movie</a> first.
        </div>
    }
</div>